{
  "files.eol": "\n",
  "editor.tabSize": 2,
  "files.exclude": {
    "**/.git": false
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true
  },
  "files.associations": {
    "*.json": "jsonc"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll.stylelint": true
  },
  "eslint.probe": ["vue", "javascript", "typescript", "html"],
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "stylelint.validate": [
    "css",
    "scss",
    "vue"
  ],
  "unocss.root": ["packages/imd-visual-maker"],
  "typescript.tsdk": "node_modules\\typescript\\lib",
}
