{
  // 基础配置
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist",
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": false,
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "removeComments": false,
    "lib": [],
    "paths": {
      "@dreamimd/*": ["packages/*/src"]
    }
  },
}